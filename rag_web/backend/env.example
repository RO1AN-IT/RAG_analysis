# Пример файла переменных окружения для backend
# Скопируйте этот файл как .env в директории backend/ и заполните значениями

# Django настройки
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.ru,www.your-domain.ru

# OpenSearch настройки
# Для локальной разработки (OpenSearch на том же компьютере):
# OPENSEARCH_HOST=localhost
# OPENSEARCH_PORT=9200
# OPENSEARCH_USE_SSL=False
# OPENSEARCH_VERIFY_CERTS=False

# Для удаленного сервера (OpenSearch на отдельном сервере):
OPENSEARCH_HOST=your-server-ip-or-domain
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=False  # False для docker-compose без SSL, True если SSL включен
OPENSEARCH_VERIFY_CERTS=False  # False для самоподписанных сертификатов

# Аутентификация OpenSearch
# Если OpenSearch настроен с паролем (plugins.security.disabled=false):
OPENSEARCH_AUTH_USERNAME=admin  # Обычно "admin" по умолчанию
OPENSEARCH_AUTH_PASSWORD=your-opensearch-password  # Пароль, который вы установили в OPENSEARCH_INITIAL_ADMIN_PASSWORD

# Если аутентификация отключена (plugins.security.disabled=true), оставьте пустыми:
# OPENSEARCH_AUTH_USERNAME=
# OPENSEARCH_AUTH_PASSWORD=

# GigaChat учетные данные
GIGACHAT_CREDENTIALS=your-gigachat-credentials-here

# HeyGen настройки (опционально)
HEYGEN_API_KEY=your-heygen-api-key
# ВАЖНО: Укажите доступный Interactive Avatar ID из https://labs.heygen.com/interactive-avatar
# Старый аватар Katya_Chair_Sitting_public больше не доступен (ошибка 404)
# Найдите актуальный Interactive Avatar ID на странице выше и укажите его здесь
HEYGEN_AVATAR_ID=Katya_Chair_Sitting_public  # Interactive Avatar ID (для streaming нужен Interactive Avatar)
HEYGEN_VOICE_ID=453c20e1525a429080e2ad9e4b26f2cd
HEYGEN_GENERATE_URL=https://api.heygen.com/v2/video/generate
HEYGEN_STATUS_URL=https://api.heygen.com/v1/video_status.get

# CORS настройки (опционально, для продакшена)
# CORS_ALLOWED_ORIGINS=https://your-domain.ru,https://www.your-domain.ru

