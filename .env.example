# Пример файла .env
# Скопируйте этот файл в .env и заполните своими данными

# Настройки OpenSearch
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=false  # false для самоподписанных сертификатов (локальная разработка), true для продакшена
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_password_here

# Модель эмбеддингов (опционально)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Имя индекса (опционально)
INDEX_NAME=caspian_data

# OpenAI API ключ (опционально, для LLM функций)
OPENAI_API_KEY=your_openai_api_key_here
